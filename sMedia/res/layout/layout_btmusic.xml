<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
     >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_src" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/btmusic" />

    <Button
        android:id="@+id/btn_src_btmusic_prev"
        android:layout_width="62dp"
        android:layout_height="27dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="333dp"
        android:background="@drawable/btn_src_prev" />

    <TextView
        style="@style/TextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="330dp"
        android:text="@string/str_btn_btmusic" />

    <Button
        android:id="@+id/btn_src_btmusic_next"
        android:layout_width="62dp"
        android:layout_height="27dp"
        android:layout_marginLeft="335dp"
        android:layout_marginTop="333dp"
        android:background="@drawable/btn_src_next" />

    <ImageButton 
        android:id="@+id/btn_enterbtmusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/btn_enterbtmusic"/>
    
</FrameLayout>







