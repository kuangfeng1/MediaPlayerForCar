<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/photo_frame"  >

    <FrameLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
		
        <com.dc.smedia.until.DragImageView 
            android:id="@+id/photo_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/photo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:background="@drawable/video_bottom_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="994dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="65dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btn_photo_full_list"
                    style="@style/MusicBottomBarBtnTheme"
                    android:drawableTop="@drawable/btn_video_list"
                    android:text="@string/str_btn_photo_list" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btn_photo_full_prev"
                    style="@style/MusicBottomBarBtnTheme"
                    android:drawableTop="@drawable/btn_video_prev"
                    android:text="@string/str_btn_video_prev" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_photo_full_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/btn_music_play" />

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btn_photo_full_next"
                    style="@style/MusicBottomBarBtnTheme"
                    android:drawableTop="@drawable/btn_video_next"
                    android:text="@string/str_btn_video_next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/btn_photo_full_mode"
                    style="@style/MusicBottomBarBtnTheme"
                    android:drawableTop="@drawable/btn_video_circle"
                    android:text="@string/str_btn_video_mode" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>